{
  "name": "countinghouse",
  "version": "0.0.1",
  "description": "An accounting app written using electron.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "test": "npm test",
    "package": "build --x64 --publish never"
  },
  "build": {
    "appId": "com.jwir3.countinghouse",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/windows/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "installerHeaderIcon": "resources/windows/setup-icon.ico"
    },
    "mac": {
      "icon": "resources/osx/icon.icns",
      "category": "calendar"
    },
    "dmg": {
      "icon": "resources/osx/logo-dmg.icns",
      "background": "resources/osx/dmg-background.png"
    },
    "directories": {
      "buildResources": "resources"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jwir3/countinghouse.git"
  },
  "keywords": [
    "accounting",
    "business",
    "tools",
    "double-entry",
    "balance-sheet",
    "accounts"
  ],
  "author": "Scott Johnson <jaywir3@gmail.com>",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/jwir3/countinghouse/issues"
  },
  "homepage": "https://github.com/jwir3/countinghouse#readme",
  "devDependencies": {
    "electron": "^3.0.4",
    "electron-builder": "^20.28.4"
  }
}
